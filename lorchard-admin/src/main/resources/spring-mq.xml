<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.4.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 需要加载配置文件 -->
	<bean id="propertyPlaceHolderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:yuansheng-rabbitmq.properties</value>
			</list>
		</property>
	</bean>
	<!-- 消息消费者 -->
	<bean id="merchantMessageConsumer"
		class="com.ysdevelop.lorchard.mq.service.MerchantMessageConsumer"></bean>
	<!-- 绑定队列监听器 -->
	<rabbit:listener-container
		connection-factory="connectionFactory" acknowledge="auto"
		requeue-rejected="false">
		<rabbit:listener ref="merchantMessageConsumer"
			queues="${mq.merchant.queue}_messageQueue" />
	</rabbit:listener-container>

</beans>
